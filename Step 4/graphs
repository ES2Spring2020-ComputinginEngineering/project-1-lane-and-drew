zarray31 = np.array([])

tupleLength31 =[]
for ln in fin31:
    tupleLength31 = np.append(tupleLength31,fin31.readline())

tupleLength41= []
for ln in fin41:
    tupleLength41 = np.append(tupleLength41,fin41.readline())
    
tupleLength51= []
for ln in fin51:
    tupleLength51 = np.append(tupleLength51,fin51.readline())
    
tupleLength61 = []
for ln in fin61:
    tupleLength61 = np.append(tupleLength61,fin61.readline())
    
tupleLength71 =[]
for ln in fin71:
    tupleLength71 = np.append(tupleLength71,fin71.readline())
    
    
for j in range(len(tupleLength71)-1):
    timearray71 = np.append(timearray71,tupleLength71[j][0])
    xarray71 = np.append(xarray71, tupleLength71[j][1])
    yarray71 = np.append(yarray71, tupleLength71[j][2])
    zarray71 = np.append(zarray71, tupleLength71[j][3])

for i in range(len(timearray71)-1):
    plt.scatter(timearray71[i],xarray71[i])
    plt.scatter(timearray71[i],yarray71[i])
    plt.scatter(timearray71[i],zarray71[i])
plt.xlabel("Time")
plt.ylabel("Acceleration")
plt.title("Pendulum Length 71cm")
plt.yticks([-500,0,500])
plt.xticks([24000,31000])
plt.show()

