import numpy as np
import matplotlib.pyplot as plt
import os

path="/Users/drewmacklin/Documents/GitHub/project-1-lane-and-drew"
os.chdir(path)

fin71 = open("71data.txt", "r")
fin61 = open("61data.txt", "r")
fin51 = open("51data.txt", "r")
fin41 = open("41data.txt", "r")
fin31 = open("31data.txt", "r")


lengths = np.array([.71,.61,.51,.41,.31])

def period(a):
    periods = [0]*len(a)
    for i in range(len(a)):
        p = 2*np.pi*np.sqrt(a[i]/9.81)
        periods[i] = p
    return periods
print(period(lengths))

timearray71 = np.array([])
xarray71 = np.array([])
yarray71 = np.array([])
zarray71 = np.array([])

timearray61 = np.array([])
xarray61 = np.array([])
yarray61 = np.array([])
zarray61 = np.array([])

timearray51 = np.array([])
xarray51 = np.array([])
yarray51 = np.array([])
